{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../dist"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/teacher/:email*",
      "destination": "/teacher.html"
    },
    {
      "source": "/student/:email*",
      "destination": "/student.html"
    },
    {
      "source": "/admin",
      "destination": "/admin.html"
    },
    {
      "source": "/api/:path*",
      "destination": "/server/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
